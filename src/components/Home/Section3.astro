---

<section id="work" class="bg-gray-50 py-16 md:py-24"> {/* Light background, consistent padding */}
  <div class="container mx-auto px-4">
    
    {/* Section Heading */}
    <h2 class="text-5xl sm:text-6xl lg:text-7xl font-serif font-medium mb-10 md:mb-16 text-gray-900">
      PREVIOUS<br/>WORK
    </h2>

    {/* Grid for Work Items */}
    {/* Stacks on mobile, 2 columns on medium+ screens */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 xl:gap-16">
      
      {/* Work Item 1 */}
      <div class="work-item group"> 
        <a href="#" class="block overflow-hidden rounded-md shadow-sm hover:shadow-lg transition-shadow duration-300"> {/* Make item clickable */}
          <img 
            src={modernBuildingUrl} 
            alt="Modern architectural building with curved roof, representing FlowInbox project" 
            class="w-full h-auto object-cover aspect-video" 
            width="800" 
            height="450"
            loading="lazy" 
            decoding="async"
          />
        </a>
        <div class="mt-3 sm:mt-4">
          <p class="text-sm sm:text-base font-sans text-gray-600">
            2025 - FlowInbox
          </p>
          {/* Optional: Add a short description or link here */}
        </div>
      </div>
      
      {/* Work Item 2 */}
      <div class="work-item group">
         <a href="#" class="block overflow-hidden rounded-md shadow-sm hover:shadow-lg transition-shadow duration-300">
          <img 
            src={streetSceneUrl} 
            alt="Man walking through modern urban architecture, representing Upwork freelancing" 
            class="w-full h-auto object-cover aspect-[4/5]" 
            width="600" 
            height="750"
            loading="lazy" 
            decoding="async"
          />
        </a>
        <div class="mt-3 sm:mt-4">
          <p class="text-sm sm:text-base font-sans text-gray-600">
            August 2024 - Present Freelancer on Upwork
          </p>
           {/* Optional: Add a short description or link here */}
        </div>
      </div>

      {/* Add more work items here following the same structure */}
      
    </div>

  </div>
</section>

