---
// Placeholder image - replace with your actual image path
const buildingImageUrl = 'https://images.unsplash.com/photo-1579564781916-385f0f0c2059?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80'; // Placeholder similar to the building

// Props for reusability (optional, but good practice)
export interface Props {
  quote: string;
  imageSrc?: string; // Use default if not provided
  imageAlt: string;
  caption: string;
}

const {
  quote = "The Croalstead Building was a joy to capture because whichever angle I chose to shoot from, there was always a new pattern to witness.",
  imageSrc = buildingImageUrl,
  imageAlt = "Upward view of the Croalstead Building facade framed by surrounding structures",
  caption = "2025 – Human Eye View"
} = Astro.props;
---

<section class="bg-gray-50 py-16 md:py-24"> {/* Consistent background and padding */}
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-start gap-8 lg:gap-12 xl:gap-16">
      
      {/* Left Column: Quote */}
      <div class="w-full md:w-7/12 lg:w-6/12"> {/* Giving text slightly more space */}
        <blockquote class="mt-1 md:mt-0"> {/* Using blockquote for semantic meaning */}
          <p class="text-2xl md:text-3xl lg:text-4xl font-serif leading-relaxed md:leading-loose text-gray-800">
            {quote}
          </p>
          {/* Optional: Add citation/author here if needed */}
          {/* <footer class="mt-4 text-base font-sans text-gray-600">— Author Name</footer> */}
        </blockquote>
      </div>

      {/* Right Column: Image + Caption */}
      <div class="w-full md:w-5/12 lg:w-6/12">
        <figure> {/* Using figure for image + caption */}
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="w-full h-auto object-cover rounded-md shadow-md aspect-[4/5]" 
            width="600" 
            height="750"
            loading="lazy" 
            decoding="async"
          />
          <figcaption class="mt-3 sm:mt-4 text-sm sm:text-base font-sans text-gray-600">
            {caption}
          </figcaption>
        </figure>
      </div>

    </div>
  </div>
</section>

