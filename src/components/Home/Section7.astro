---
// Placeholder image - Replace with your actual image path or import from assets
const shuttleImageUrl = 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1172&q=80'; // Placeholder space image

// Contact details (can be passed as props too)
const name = "Harsh Maurya";
const email = "maurya.harsh479@gmail.com";
const phone = "9990471974"; // Display only, wrap in tel: link if needed
const availability = "OPEN FOR COLLABS";
---

<section id="contact" class="bg-black text-white py-16 md:py-24 lg:min-h-screen flex items-center"> {/* Added min-h-screen for potential full-height display */}
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-10 lg:gap-16 items-center md:items-stretch"> {/* Stack vertically, then row. Stretch items */}
      
      {/* Left Column: Text Content */}
      <div class="w-full md:w-1/2 lg:w-5/12 text-center md:text-left flex flex-col pt-4 md:pt-8 pb-8"> {/* Added padding */}
        
        {/* Name (Optional based on design) */}
        <p class="text-lg font-sans mb-6 md:mb-8">{name}</p>
        
        {/* Main Heading */}
        <h2 class="text-6xl sm:text-7xl lg:text-8xl font-serif font-medium mb-12 md:mb-16 lg:mb-24 leading-none">
          GET IN<br/>TOUCH
        </h2>
        
        {/* Contact Details */}
        <div class="space-y-6 md:space-y-8 text-base md:text-lg font-sans">
          <div>
            <p class="font-medium text-gray-300 mb-1">Email:</p>
            <a href={`mailto:${email}`} class="hover:text-gray-400 transition-colors duration-300 break-words">
              {email}
            </a>
          </div>
          <div>
            <p class="font-medium text-gray-300 mb-1">Phone:</p>
            {/* Avoid tel: link if number format isn't standard or you prefer not to */}
            <p>{phone}</p> 
            {/* OR <a href={`tel:${phone.replace(/\s+/g, '')}`} class="hover:text-gray-400 transition-colors duration-300">{phone}</a> */}
          </div>
        </div>

        {/* Availability Status */}
        <div class="mt-auto pt-12 md:pt-16"> {/* Pushes to the bottom */}
          <p class="text-sm font-sans font-semibold uppercase tracking-wider underline underline-offset-4 decoration-1">
            {availability}
          </p>
        </div>

      </div> {/* End Left Column */}

      {/* Right Column: Image */}
      <div class="w-full md:w-1/2 lg:w-7/12 flex-shrink-0">
         <img 
            src={shuttleImageUrl} 
            alt="Black and white aerial view of a space shuttle flying over clouds" 
            class="w-full h-80 md:h-full object-cover rounded-lg shadow-lg shadow-gray-800/30" 
            width="800" 
            height="1000" 
            loading="lazy" 
            decoding="async"
          />
      </div> {/* End Right Column */}

    </div> {/* End Main Flex Container */}
  </div> {/* End Container */}
</section>

